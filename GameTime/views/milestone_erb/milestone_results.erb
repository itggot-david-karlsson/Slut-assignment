<div class="input">
  <form action="/milestone/search" method="get">
    <input type="text" name="search" placeholder="search" id="milestone_name">
    <button type="submit" id="milestone_search">Search for milestones</button>
    <a href="/create_milestone"><button type="button">Create a milestone</button></a>
  </form>
</div>

<br><br>

<table style="width: 100%">
  <tr>
    <th id="milestone">Milestone</th>
    <th id="description">Description</th>
  </tr>
  <% for result in @results %>
      <tr>
        <td><a href="/milestone/<%=result.id%>"><%= result.name %></a></td>
        <td><%= result.description %></td>
      </tr>
  <% end %>
</table>
